{
  "manifest_version": 3,
  "name": "ShieldPhish (Auto + Popup)",
  "version": "1.1",
  "description": "Automatically checks sites and provides details on click.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/shield-default.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/shield-default.png"
  }
}
