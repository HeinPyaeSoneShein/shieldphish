{
  "manifest_version": 3,
  "name": "ShieldPhish (Automatic)",
  "version": "1.0",
  "description": "Automatically checks sites for phishing threats.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://*.onrender.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/shield-default.png"
    }
  },
  "icons": {
    "128": "icons/shield-default.png"
  }
}
